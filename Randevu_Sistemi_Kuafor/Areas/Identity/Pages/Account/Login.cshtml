@page
@model LoginModel


@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card" style="width: 450px; background-color: #ffffff; border: none; border-radius: 15px; box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.2);">
        <div class="card-body">
            <h2 class="text-center text-dark mb-4" style="font-weight: 400;">User Login</h2>
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="mb-3 position-relative">
                    <!-- Label kısmı artık sadece placeholder olacak -->
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="User Name" style="background-color: #e9ecef; color: #495057; border: 1px solid #ced4da; border-radius: 10px; padding: 12px 15px;" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="mb-3 position-relative">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Password" style="background-color: #e9ecef; color: #495057; border: 1px solid #ced4da; border-radius: 10px; padding: 12px 15px;" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div class="form-check">
                        <input class="form-check-input" asp-for="Input.RememberMe" style="background-color: #e9ecef; border-color: #ced4da;" />
                        <label asp-for="Input.RememberMe" class="form-check-label text-dark">Remember me</label>
                    </div>
                    <a id="forgot-password" asp-page="./ForgotPassword" class="text-dark text-decoration-none" style="font-size: 0.9rem;">Forgot password?</a>
                </div>
                <button id="login-submit" type="submit" class="btn w-100" style="background-color: #560c0e; color: #ffffff; border-radius: 10px; padding: 12px; font-size: 1rem;">LOGIN</button>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}