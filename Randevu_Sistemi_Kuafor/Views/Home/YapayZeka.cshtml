@{
    ViewData["Title"] = "Image Upload";
}

<h2>Resim Yükle ve Saç Rengini Değiştir</h2>

<form enctype="multipart/form-data" method="post" asp-controller="Image" asp-action="UploadImage">
    <div class="form-group">
        <label for="file">Fotoğraf Yükleyin</label>
        <input type="file" id="file" name="file" accept="image/*" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="colorDescription">Saç Rengi</label>
        <input type="text" id="colorDescription" name="colorDescription" class="form-control" placeholder="Örneğin: Sarı" required />
    </div>

    <div class="form-group">
        <label for="hairstyleDescription">Saç Modeli</label>
        <input type="text" id="hairstyleDescription" name="hairstyleDescription" class="form-control" placeholder="Örneğin: Hi-top fade" required />
    </div>

    <button type="submit" class="btn btn-primary">Gönder</button>
</form>

@if (ViewData["Result"] != null)
{
    <div class="alert alert-info mt-4">
        <strong>Sonuç:</strong> @ViewData["Result"]
    </div>
}
