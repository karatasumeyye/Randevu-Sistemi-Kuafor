<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- jQuery (AJAX ve DOM işlemleri için) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Bootstrap JS (Modal ve diğer Bootstrap işlevleri için) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="container-fluid">
        <div class="row flex-nowrap">
            <!-- Sidebar -->
            <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0 custom-sidebar">
                <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white min-vh-100">
                    <a href="/" class="d-flex align-items-center pb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                        <span class="fs-5 d-none d-sm-inline">SumSalon</span>
                    </a>
                    <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">
                        <li class="nav-item">
                            <a href="/Home/Index" class="nav-link align-middle px-0">
                                <i class="fs-4 bi-house"></i> <span class="ms-1 d-none d-sm-inline">Home</span>
                            </a>
                        </li>
                       
                        
 
  
                                <li>
                                    <a href="/Admin/ServiceUpdate" class="nav-link px-0"> <span class="d-none d-sm-inline">Services</span>  </a>
                                </li>

                                <li>
                                    <a href="/Admin/AddEmployee" class="nav-link px-0"> <span class="d-none d-sm-inline">Employee Proceses</span>  </a>
                                </li>

                                <li>
                                    <a href="/Admin/AddEmployeeService" class="nav-link px-0"> <span class="d-none d-sm-inline">List Employee</span>  </a>
                                </li>

                                <li>
                                     <a href="/Admin/ListAppointment" class="nav-link px-0"> <span class="d-none d-sm-inline">List Appointments</span>  </a>
                                </li>


                    </ul>
                    <hr>
                    
                </div>
            </div>

            <!-- Main Content Area -->
            <div class="col py-3">
                <!-- RenderBody will place the view-specific content here -->
                @RenderBody()

                <!-- Scripts Section (Opsiyonel olarak render edilmesini sağlıyoruz) -->
                @RenderSection("Scripts", required: false)

            </div>

            
        </div>
    </div>

    <!-- Bootstrap JS ve jQuery için gerekli scriptler -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
